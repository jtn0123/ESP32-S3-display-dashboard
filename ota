#!/bin/bash
# ESP32-S3 Dashboard OTA Tool
# Rust-based OTA updater

set -e

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo -e "${RED}Error: Rust/Cargo not found${NC}"
    echo "Please install Rust: https://rustup.rs"
    exit 1
fi

# Build the OTA tool if needed
if [ ! -f "tools/ota/target/release/ota" ]; then
    echo -e "${BLUE}Building OTA tool...${NC}"
    cd tools/ota
    # Build for host platform, not ESP32
    cargo +stable build --release --quiet
    cd ../..
fi

# Run the OTA tool with all arguments
exec tools/ota/target/release/ota "$@"